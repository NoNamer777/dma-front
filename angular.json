{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "packages",
    "cli": {
        "analytics": false,
        "packageManager": "npm",
        "schematicCollections": ["@angular-eslint/schematics"]
    },
    "projects": {
        "dma-front": {
            "projectType": "application",
            "root": "",
            "sourceRoot": "src",
            "prefix": "dma",
            "schematics": {
                "@schematics/angular:component": {
                    "changeDetection": "OnPush",
                    "displayBlock": true,
                    "style": "scss"
                },
                "@schematics/angular:directive": {
                    "flat": false
                },
                "@schematics/angular:guard": {
                    "flat": false
                },
                "@schematics/angular:interceptor": {
                    "flat": false
                },
                "@schematics/angular:pipe": {
                    "flat": false
                },
                "@schematics/angular:resolver": {
                    "flat": false
                },
                "@schematics/angular:service": {
                    "flat": false
                }
            },
            "targets": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "assets": ["src/favicon.ico", "src/assets"],
                        "index": "src/index.html",
                        "inlineStyleLanguage": "scss",
                        "main": "src/main.ts",
                        "outputPath": "dist/dma-front",
                        "polyfills": ["zone.js"],
                        "scripts": [
                            "node_modules/@popperjs/core/dist/umd/popper.min.js",
                            "node_modules/bootstrap/dist/js/bootstrap.min.js"
                        ],
                        "styles": ["src/styles.scss", "node_modules/bootstrap/dist/css/bootstrap.min.css"],
                        "tsConfig": "tsconfig.app.json"
                    },
                    "defaultConfiguration": "prod",
                    "configurations": {
                        "prod": {
                            "crossOrigin": "anonymous",
                            "outputHashing": "all",
                            "subresourceIntegrity": true
                        },
                        "dev": {
                            "buildOptimizer": false,
                            "extractLicenses": false,
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.dev.ts"
                                }
                            ],
                            "namedChunks": true,
                            "optimization": false,
                            "sourceMap": true,
                            "vendorChunk": true,
                            "watch": true
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "dma-front:build:dev",
                        "host": "0.0.0.0"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "assets": ["src/favicon.ico", "src/assets"],
                        "codeCoverage": true,
                        "codeCoverageExclude": ["src/environments/**", "src/app/**/*.module.ts", "src/testing/**"],
                        "fileReplacements": [
                            {
                                "replace": "src/environments/environment.ts",
                                "with": "src/environments/environment.test.ts"
                            }
                        ],
                        "inlineStyleLanguage": "scss",
                        "karmaConfig": "karma.conf.js",
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "reporters": ["progress", "dots"],
                        "styles": ["src/styles.scss", "node_modules/bootstrap/dist/css/bootstrap.min.css"],
                        "scripts": [
                            "node_modules/@popperjs/core/dist/umd/popper.min.js",
                            "node_modules/bootstrap/dist/js/bootstrap.min.js"
                        ],
                        "tsConfig": "tsconfig.spec.json"
                    },
                    "defaultConfiguration": "ci",
                    "configurations": {
                        "ci": {
                            "browsers": "ChromeHeadlessCI",
                            "progress": false,
                            "sourceMap": false,
                            "watch": false
                        },
                        "dev": {
                            "browsers": "ChromeHeadless",
                            "progress": true,
                            "sourceMap": true,
                            "watch": true
                        }
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
                    }
                }
            }
        }
    }
}
